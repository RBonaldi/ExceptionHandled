<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>ExceptionHandled</PackageId>
    <Version>1.0.0</Version>
    <Authors>Rafael Bonaldi - rafaelbonaldi@gmail.com</Authors>
    <Description>Validate system exceptions. Specifically handle the generated exceptions.</Description>
    <PackageIcon>logo.png</PackageIcon>
    <PackageReadmeFile>README nuget.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/RBonaldi/ExceptionHandled</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RBonaldi/ExceptionHandled</RepositoryUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageTags>ExceptionHandled, Exception, Handled, validateException, Validate</PackageTags>
    <RepositoryType>GitHub</RepositoryType>
    <Win32Resource>C:\Projetos\ExceptionHandled\Assets\logo.png</Win32Resource>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Assets\logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README nuget.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
